@page
@model AbbyWeb.Pages.Categories.Delete

<form method="post">
    <input hidden asp-for="Category.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3"> Delete Category</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input readonly asp-for="Category.Name" class="form-control"/>
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input readonly asp-for="Category.DisplayOrder" class="form-control"/>
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width: 150px;">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width: 150px">Back to List</a>
    </div>

</form>

@* Validacion desde cliente *@
@section Scripts
{
    @{
        <partial name="Shared/_ValidationScriptsPartial"/>
    }
}
